<div class="items-show">
  <div class="top">
    <div class="item-overview">
      <div>
        <div class="img">
          <%= image_tag("https://images-na.ssl-images-amazon.com/images/I/312xQCNFHcL.jpg") %>
        </div>
        <div class="item-name">カルサーダ・クイネア クイネア・レセルバ 750ml</div>
        <div class="buttons">
          <%= link_to "みんなと乾杯する", items_path, class: "oblong-button main-color" %>
          <%= link_to "amazonで見る", "https://www.amazon.co.jp/%E6%BE%A4%E4%B9%83%E4%BA%95-%E7%B4%94%E7%B1%B3%E5%90%9F%E9%86%B8-%E8%92%BC%E5%A4%A9%EF%BC%88%E3%81%9D%E3%81%86%E3%81%A6%E3%82%93%EF%BC%89-1800%EF%BD%8D%EF%BD%8C%C3%971%E6%9C%AC/dp/B005PBIEAW/ref=lp_71611051_1_3_sspa?s=alcohol&ie=UTF8&qid=1552457511&sr=1-3-spons&psc=1", class: "oblong-button amazon-color", :target => "_blank" %>
          <div class="eval">
            <%= link_to image_tag("favorite_red_border.png"), items_path, class: "circle-button main-color" %>
            <%= link_to image_tag("like_red_border.png"), items_path, class: "circle-button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="bottom">
    <div class="content">
      <div class="all-reviews">
        <div class="title">みんなのレビュー</div>
        <% 3.times do %>
        <div class="review">
          <div class="user-info">
            <div class="img">
              <%= image_tag("https://i.gyazo.com/c022ae94fdfe4688247e7b2fdd5f283a.jpg") %>
            </div>
            <div class="name">
              @takoyaki0316
            </div>
          </div>
          <div class="body">
            hoge hoge hoge hoge hoge
          </div>
        </div>
        <% end %>
      </div>
      <div class="related-items">
        <div class="title">オススメのお酒</div>
        <% 3.times do %>
        <div class="item">
          <div class="img"><%= image_tag("https://images-fe.ssl-images-amazon.com/images/I/3194SNNR5XL._SY445_QL70_.jpg") %></div>
          <div class="name">hoge hoge hoge</div>
        </div>
        <% end %>
      </div>
      <div class="other-items">
        <div class="title">他のお酒</div>
        <div class="all-items">
          <% 7.times do %>
          <div class="item">
            <div class="img"><%= image_tag("https://images-fe.ssl-images-amazon.com/images/I/3194SNNR5XL._SY445_QL70_.jpg") %></div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
